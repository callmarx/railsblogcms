<section id="blog">
  <div class="container">
    <div class="col-sm-10 col-sm-offset-1 col-xs-12 blog-content">
      <% @articles.each do |article| %>
      <div class="col-xs-12">
        <div class="text-center">
          <h2><%= article.title %></h2>
          <h6><%= article.created_at.strftime('%d %b, %Y') %></h6>
        </div>

        <div>
          <%= raw(article.body).truncate(358) %>
        </div>

        <div class="text-center">
          <%= link_to "Saiba Mais", article_path(article), class: "btn btn-primary" %>
        </div>
        <br>
      </div>
      <% end %>
    </div>
  </div>
</section>
